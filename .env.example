# Kimiyi Call Flow Weaver Environment Variables
# Copy this file to .env and fill in your actual values
#
# IMPORTANT: Variables prefixed with VITE_ are accessible in the browser
# Variables without VITE_ prefix are only available on the server side

# =============================================================================
# REQUIRED CONFIGURATION (Browser-accessible)
# =============================================================================

# Azure OpenAI Configuration
VITE_AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
VITE_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com

# Twilio Configuration
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
VITE_TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
VITE_TWILIO_PHONE_NUMBER=+1234567890

# Webhook Base URL for Twilio callbacks
VITE_WEBHOOK_BASE_URL=https://your-domain.com

# =============================================================================
# PERFORMANCE OPTIMIZATION SETTINGS
# =============================================================================

VITE_PERFORMANCE_TARGET_LATENCY=300
VITE_PERFORMANCE_MAX_LATENCY=500
VITE_PERFORMANCE_CACHE_ENABLED=true
VITE_PERFORMANCE_LANGUAGE_OPTIMIZATION=true
VITE_PERFORMANCE_FAILOVER_ENABLED=true

# =============================================================================
# OPTIONAL API KEYS (Browser-accessible)
# =============================================================================

VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
VITE_DEEPGRAM_API_KEY=your_deepgram_api_key_here
VITE_AZURE_SPEECH_API_KEY=your_azure_speech_api_key_here
VITE_AZURE_SPEECH_REGION=eastus
VITE_GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here

# =============================================================================
# SERVER-SIDE ONLY (No VITE_ prefix - not accessible in browser)
# =============================================================================

# These are for server-side operations and demos
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
WEBHOOK_BASE_URL=https://your-domain.com

# Performance settings for server-side demos
PERFORMANCE_TARGET_LATENCY=300
PERFORMANCE_MAX_LATENCY=500
PERFORMANCE_CACHE_ENABLED=true
PERFORMANCE_LANGUAGE_OPTIMIZATION=true
PERFORMANCE_FAILOVER_ENABLED=true
